# Gruvbox Hard Dark Mako Config

font=JetBrainsMono Nerd Font 11

# Colors
background-color=#1d2021
text-color=#ebdbb2
border-color=#8ec07c
progress-color=#b8bb26

# Layout
border-size=2
border-radius=0
padding=12
margin=10
width=350
height=120

# Position
anchor=top-right

# Behavior
default-timeout=5000
ignore-timeout=0
max-visible=5
sort=-time

# Icons
icons=1
max-icon-size=64

[urgency=low]
border-color=#83a598
background-color=#1d2021

[urgency=normal]
border-color=#8ec07c
background-color=#1d2021

[urgency=high]
border-color=#fabd2f
background-color=#1d2021

[urgency=critical]
border-color=#fb4934
background-color=#fb4934
text-color=#1d2021
default-timeout=0
