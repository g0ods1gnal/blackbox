# Gruvbox Hard Dark Starship Config

format = """
$username\
$hostname\
$directory\
$git_branch\
$git_status\
$python\
$rust\
$golang\
$nodejs\
$character"""

[character]
success_symbol = "[➜](bold green)"
error_symbol = "[✗](bold red)"

[username]
style_user = "bold #8ec07c"
format = "[$user]($style)"
show_always = true

[hostname]
ssh_only = false
format = "[@$hostname](bold #689d6a) "
disabled = false

[directory]
style = "bold #83a598"
truncation_length = 3
format = "[$path]($style) "

[git_branch]
symbol = " "
style = "#d3869b"
format = "[$symbol$branch]($style) "

[git_status]
style = "#fb4934"
format = "[$all_status$ahead_behind]($style) "

[python]
symbol = " "
style = "#fabd2f"
format = "[$symbol$version]($style) "

[rust]
symbol = " "
style = "#fe8019"
format = "[$symbol$version]($style) "

[golang]
symbol = " "
style = "#8ec07c"
format = "[$symbol$version]($style) "

[nodejs]
symbol = " "
style = "#b8bb26"
format = "[$symbol$version]($style) "
