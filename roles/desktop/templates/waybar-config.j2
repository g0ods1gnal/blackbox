{
    "layer": "top",
    "height": 24,
    
    "modules-left": ["sway/workspaces"],
    "modules-center": ["custom/eris"],
    "modules-right": ["network", "cpu", "memory", "battery", "clock"],
    
    "sway/workspaces": {
        "disable-scroll": true,
        "format": "{name}"
    },
    
    "custom/eris": {
        "format": "[ ERIS ]",
        "tooltip": false
    },
    
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },
    
    "cpu": {
        "format": " {usage}%"
    },
    
    "memory": {
        "format": " {}%"
    },
    
    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },
    
    "network": {
        "format-wifi": " {signalStrength}%",
        "format-ethernet": "",
        "format-disconnected": "âš "
    }
}
